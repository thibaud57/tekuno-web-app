{
    "arrowParens": "avoid",
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "endOfLine": "crlf",
    "bracketSameLine": true,
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "ignore",
    "overrides": [
        {
            "files": "*.ts",
            "options": {
                "printWidth": 80
            }
        },
        {
            "files": "*.html",
            "options": {
                "printWidth": 160
            }
        }
    ],
    "plugins": [
        "prettier-plugin-organize-imports",
        "prettier-plugin-tailwindcss"
    ]
}
